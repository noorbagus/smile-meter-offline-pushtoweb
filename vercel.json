{
  "rewrites": [
    {
      "source": "/fluid-hat/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=*, microphone=*"
        }
      ]
    }
  ],
  "env": {
    "VITE_SNAPCHAT_CLIENT_ID": "$VITE_SNAPCHAT_CLIENT_ID",
    "VITE_SNAPCHAT_CLIENT_SECRET": "$VITE_SNAPCHAT_CLIENT_SECRET", 
    "VITE_SNAPCHAT_REDIRECT_URI": "$VITE_SNAPCHAT_REDIRECT_URI"
  }
}